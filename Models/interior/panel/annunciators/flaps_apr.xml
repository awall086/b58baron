<?xml version="1.0"?>

<PropertyList>

    <path>flaps_apr.ac</path>

    <!--	flaps aproach Annunciator	-->
    <animation>
        <type>select</type>
        <object-name>round_ann</object-name>
        <condition>
            <and>
                <and>
                    <greater-than>
                        <property>surface-positions/flap-pos-norm</property>
                        <value>0.49</value>
                    </greater-than>
                    <less-than>
                        <property>surface-positions/flap-pos-norm</property>
                        <value>0.51</value>
                    </less-than>
                </and>
                <greater-than> 
                    <property>/systems/electrical/volts</property>
                    <value>16</value>
                </greater-than>
            </and>
        </condition>
    </animation>

</PropertyList>


