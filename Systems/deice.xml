<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>


    <filter>
        <name>Pitot</name>
        <type>gain</type>
        <input>
            <condition>
                <greater-than> 
                    <property>/systems/electrical/outputs/pitot-heat</property>
                    <value>16</value>
                </greater-than>
            </condition>
            <property>controls/anti-ice/pitot-heat-switch</property>
        </input>
        <output>
            <property>controls/anti-ice/pitot-heat</property>
        </output>
    </filter>

